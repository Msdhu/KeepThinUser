.wraper {
  box-sizing: border-box;
  padding-bottom: 130rpx;
  width: 100%;
}

.logo {
  height: 800rpx;
  top: 0;
  z-index: -1;
}

.login,.logo {
  position: absolute;
  width: 100%;
}

.login {
  bottom: 0;
  height: 100%;
  left: 0;
  z-index: 9;
}

.header {
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 160rpx;
  padding: 0 28rpx;
  position: relative;
  width: 100%;
}

.header,.header>.userInfo {
  align-items: center;
  display: flex;
}

.header>.userInfo {
  color: #fff;
  font-size: 30rpx;
}

.avatar {
  height: 96rpx;
  width: 96rpx;
}

.user {
  margin-left: 16rpx;
}

.user>view:nth-child(2) {
  margin-top: 4rpx;
}

.user>view:nth-child(2)>image {
  height: 18rpx;
  margin-left: 10rpx;
  width: 32rpx;
}

.weightStage {
  background: #fff3e4;
  border-radius: 34rpx;
  color: #feb857;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  width: 165rpx;
}

.weightMeasure {
  align-items: center;
  color: #fff;
  display: flex;
  flex-direction: column;
  height: 390rpx;
  margin: 35rpx auto;
  position: relative;
  width: 450rpx;
}

.weightMeasure>image {
  height: 100%;
  position: absolute;
  width: 100%;
  z-index: -1;
}

.weightMeasure_title {
  font-size: 30rpx;
  margin-top: 87rpx;
}

.weightMeasure_weight {
  align-items: center;
  display: flex;
  height: 168rpx;
}

.weightMeasure_weight>view:nth-child(1) {
  font-size: 80rpx;
}

.weightMeasure_weight>view:nth-child(2) {
  font-size: 40rpx;
  margin-left: 8rpx;
  margin-top: 26rpx;
}

.weightMeasure_btn {
  background: #fff3e4;
  border-radius: 34rpx;
  color: #feb857;
  font-size: 32rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  width: 236rpx;
}

.dailyData {
  background: #fffdf9;
  border-radius: 6rpx;
  box-shadow: 1px 1px 18px 0 hsla(0,6%,90%,.75);
  box-sizing: border-box;
  margin: 130rpx auto 0;
  padding: 28rpx 14rpx;
  width: 92%;
}

.bigDailyData {
  border-bottom: 1rpx solid #e9e9e9;
  flex-wrap: wrap;
  justify-content: space-between;
}

.bigDailyData,.bigDailyData>view {
  align-items: center;
  display: flex;
}

.bigDailyData>view {
  flex-direction: column;
  width: 33%;
}

.bigDailyData>view:nth-child(-n+6) {
  margin-bottom: 20rpx;
}

.bigDailyData_value {
  color: #fdb03f;
  font-size: 34rpx;
  font-weight: 700;
  height: 52rpx;
  line-height: 52rpx;
}

.bigDailyData_value>text {
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
}

.bigDailyData_tit {
  color: #333;
  font-size: 30rpx;
  height: 42rpx;
  line-height: 42rpx;
}

.smallDailyData {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  width: 100%;
}

.smallDailyData>view {
  align-items: center;
  display: flex;
}

.smallDailyData_value {
  color: #fdb03f;
  font-size: 28rpx;
  font-weight: 700;
  margin-left: 2rpx;
}

.smallDailyData_value>text {
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
}

.smallDailyData_tit {
  color: #333;
  font-size: 28rpx;
}

.canvasCon {
  background: #fffdf9;
  border-radius: 6rpx;
  box-shadow: 1px 1px 18px 0 hsla(0,6%,90%,.75);
  box-sizing: border-box;
  margin: 30rpx auto;
  padding: 24rpx;
  width: 92%;
}

.canvasCon>view {
  color: #fcbf56;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 20rpx;
  text-align: right;
}

.canvas {
  height: 100%;
  width: 100%;
}